<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Dialog
        id="idSignUp"
        resizable="false"
        draggable="false"
        title="SignUp for A new Account"
        class="sapMPopover sapMIBar sapMHeader-CTX"
         beginButton="True"
    >
     <beginButton>
        <Button text="cancel" press="onCancelPressInSignUp"></Button>
        </beginButton>
        <content>
     <form:SimpleForm
                id="idSignUpForm_CS"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                emptySpanXL="1"
                emptySpanL="1"
                emptySpanM="1"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
            >
            <VBox class="SignUpFragmentVbox"  width="100%" >
            <HBox> 
            <Label class="sapUiTinyMarginTop" text="User Name" width="100px"></Label>
           <Label class="sapUiTinyMarginTop" text=":" width="20px"></Label>
            <Input placeholder="username" ></Input>
            </HBox>
            
           <HBox>
              <Label text="Email" class="sapUiTinyMarginTop"  width="100px"></Label>
               <Label text=":" class="sapUiTinyMarginTop"  width="20px"></Label>
            <Input placeholder="Email" ></Input>
           </HBox>
           <HBox>
              <Label text="Phone" class="sapUiTinyMarginTop"  width="100px"></Label>
               <Label text=":" class="sapUiTinyMarginTop"  width="20px"></Label>
            <Input placeholder="Phone" ></Input>
           </HBox>
           <HBox>
              <Label text="Password" class="sapUiTinyMarginTop"  width="100px"></Label>
               <Label text=":" class="sapUiTinyMarginTop"  width="20px"></Label>
            <Input placeholder="password" ></Input>
           </HBox>
           <HBox>
              <Label text="confirm Pwd" class="sapUiTinyMarginTop"  width="100px"></Label>
               <Label text=":" class="sapUiTinyMarginTop"  width="20px"></Label>
            <Input placeholder="Confirm Password" ></Input>
           </HBox>
            <Button class="sapUiSmallMarginTop"  type="Emphasized" width="100%" text="Sign Up"></Button>
           
            <!-- <HBox justifyContent="SpaceBetween">
           
                                    <CheckBox
                                        id="_IDGenCheckBox"
                                        text="Auto Save"
                                        select="onSelectCheckBox"
                                    />
                                  
                    
                        <Link
                            id="IDchangePassword"
                            text="Change Password"
                      
                            press="onChangePasswordBtn"
                        />
                       
                    </HBox> -->

            </VBox>
              
             </form:SimpleForm>
        
        </content>
        </Dialog>
        </core:FragmentDefinition>